pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                echo 'Checking out from Git...'
            }
        }

        stage('Build') {
            steps {
                echo 'Building project from Jenkinsfile...'
            }
        }

        stage('Test') {
            steps {
                echo 'Running tests from Jenkinsfile...'
            }
        }
    }
}
